{
    "name": "axilweb/ai_job_listing",
    "description": "A simple starter kit to work in WordPress plugin",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "axilweb",
            "email": "help@axilweb.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require": {
        "php": ">=7.0.0|8.0"
    },
    "require-dev": {
        "wp-coding-standards/wpcs": "dev-main",
        "dealerdirect/phpcodesniffer-composer-installer": "dev-main",
        "tareq1988/wp-php-cs-fixer": "dev-main",
        "phpcompatibility/phpcompatibility-wp": "dev-main",
        "wp-phpunit/wp-phpunit": "^6.0",
        "yoast/phpunit-polyfills": "^1.0",
        "phpunit/phpunit": "^9.5",
        "phpcsstandards/phpcsutils": "^0.4.1 || ^0.5 || ^0.6.2 || ^0.7 || ^1.0",
         "dealerdirect/phpcodesniffer-composer-installer": "^0.4.1 || ^0.5 || ^0.6.2 || ^0.7 || ^1.0",
         "tareq1988/wp-php-cs-fixer": "1.0.0",
        "phpcompatibility/phpcompatibility-wp": "2.1.4"
    },
    "autoload": {
        "psr-4": {
            "Axilweb\\AiJobListing\\": "backend/",
            "Axilweb\\AiJobListing\\Tests\\": "tests/phpunit/"
        }
    },
    "scripts": {
        "phpcs": [
            "phpcs -p -s"
        ],
        "phpcbf": [
            "phpcbf -p"
        ],
        "test": [
            "vendor/bin/phpunit"
        ],
        "test:all": [
            "phpcs -p -s & vendor/bin/phpunit"
        ]
    }
}
